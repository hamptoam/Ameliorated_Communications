@model IEnumerable<Ameliorated_Communications.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.outgoingText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DailyCalls)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityGifts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeeklyCalls)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeeklyQuantityGifts)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.outgoingText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DailyCalls)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityGifts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeeklyCalls)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeeklyQuantityGifts)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
